<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick a number->"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="28dp"
        android:layout_alignTop="@+id/numbers_spinner"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <Spinner
        android:id="@+id/numbers_spinner"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="250dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:touchscreenBlocksFocus="false" />

    <TextView
        android:layout_width="72dp"
        android:layout_height="80dp"
        android:id="@+id/textView"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/numbers_spinner"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#060000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Math Tables 2 to 50"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textColor="#2c29e4"
        android:layout_above="@+id/textView2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
